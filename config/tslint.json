{
    "enable": true,
    "extends": "tslint-microsoft-contrib",
    "rulesDirectory": ["../node_modules/tslint-microsoft-contrib" ],
    "rules": {
        "interface-name": [true, "always-prefix"],
        "member-access": false,
        "object-literal-sort-keys": false,
        "max-line-length": [true, 200],
        "arrow-parens": false,
        "max-classes-per-file": false,
        "ordered-imports": [false],
        "no-consecutive-blank-lines": [true, 2],
        "one-line": [true, "check-else", "check-finally", "check-catch", "check-open-brace"],
        "semicolon": [true, "always"],
        "one-variable-per-declaration": [false],
        "space-before-function-paren": false,
        "only-arrow-functions": [false],
        "curly": [ true, "ignore-same-line" ],
        "quotemark": [true, "double"],
        "no-console": [false, "log"],
        "jsdoc-format": false,
        "no-irregular-whitespace": true,
        "no-trailing-whitespace": false,
        "indent": [true, "spaces", 4],
        "align": [true, "parameters", "arguments", "statements"],
        "space-within-parens": false,
        "no-floating-promises": [true, "Bluebird"],
        "no-unused-expression": true,

        // MS
        "linebreak-style": [false],
        "missing-jsdoc": [false],
        "newline-before-return": false,
        "no-relative-imports": false,
        "typedef": [false, "variable-declaration"],
        "max-func-body-length": 160,
        "import-name": [false],
        "prefer-type-cast": [false],
        "no-suspicious-comment": [false],
        "export-name": false,
        "no-reserved-keywords": false,
        "no-backbone-get-set-outside-model" : false,
        "no-increment-decrement": false,
        "function-name": [true, {"static-method-regex": "^[a-z][\\w\\d]+$"}],
        "member-ordering": false,
        "no-unnecessary-local-variable": false,
        "no-constant-condition": false,


        "completed-docs": [false],
        "strict-boolean-expressions": [false],
        "await-promise": [true, "Thenable", "PromiseLike", "Bluebird"]
    }
}